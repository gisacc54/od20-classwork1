<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TextView
        android:text="@string/login"
        style="@style/text_xxl"
        android:textColor="@color/logo_text"
        android:gravity="center"
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_sm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.201"
        app:cardBackgroundColor="@color/card_color"
        tools:layout_editor_absoluteX="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="30dp">

            <EditText
                android:id="@+id/usernameInput"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/r"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_text_hit_color"
                tools:layout_editor_absoluteX="56dp" />

            <EditText
                android:id="@+id/passwordInput"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/r"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:textColor="@color/input_text_color"
                android:textColorHint="@color/input_text_hit_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                app:layout_constraintVertical_bias="0.064"
                tools:layout_editor_absoluteX="100dp" />

            <Button
                android:id="@+id/loginButton"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/r"
                android:text="Login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

            <TextView
                android:id="@+id/orCreateAccountText"
                android:textColor="@color/card_text_color"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_an_account_create_account" />

            <TextView
                android:id="@+id/forgotPasswordText"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:textColor="@color/card_text_color"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_your_password_reset_it" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>